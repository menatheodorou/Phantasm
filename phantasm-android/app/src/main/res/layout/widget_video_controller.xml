<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vgRoot"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_controller_height"
    android:orientation="horizontal"
    android:background="@color/media_controller_widget_bg_color"
    android:padding="@dimen/common_padding_small2">

    <com.gpit.android.ui.common.SquareImageView
        android:id="@+id/ivChannel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:src="@drawable/ic_logo"
        android:scaleType="fitCenter"
        app:keep_width="false"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_padding_small2"
        android:layout_marginRight="@dimen/common_padding_small2"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:text="No Text for now"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ibPlayPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_padding_small2"
        android:layout_marginRight="@dimen/common_padding_small2"
        android:background="@null"
        android:padding="@dimen/common_padding_small2"
        android:src="@drawable/ic_action_play" />

</LinearLayout>
